<h1>Listing <%= plural_table_name %></h1>

<%%= link_to new_<%= singular_table_name %>_path, class: 'pull-right' do %>
  <i class="icon-plus"></i> New <%= human_name %>
<%% end -%>

<table class="table table-striped">
  <tr>
<% attributes.each do |attribute| -%>
    <th><%= attribute.human_name %></th>
<% end -%>
    <th></th>
  </tr>

<%% @<%= plural_table_name %>.each do |<%= singular_table_name %>| %>
  <tr>
<% attributes.each do |attribute| -%>
    <td><%%= <%= singular_table_name %>.<%= attribute.name %> %></td>
<% end -%>
    <td>
      <%%= link_to 'Show', <%= singular_table_name %>, class: 'btn btn-small btn-info' %>
      <%%= link_to 'Edit', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), class: 'btn btn-small btn-success' %>
      <%%= link_to 'Destroy', <%= singular_table_name %>, <%= key_value :confirm, "'Are you sure?'" %>, <%= key_value :method, ":delete" %>, class: 'btn btn-small btn-danger' %>
    </td>
  </tr>
<%% end %>
</table>
