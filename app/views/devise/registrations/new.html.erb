<h2>Sign up</h2>

<%= form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group<%= " error" if f.has_errors?(:email) %>">
    <%= f.label :email, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :email %>
      <%= f.errors_for :email %>
    </div>
  </div>

  <div class="control-group<%= " error" if f.has_errors?(:password) %>">
    <%= f.label :password, class: 'control-label' %>
    <div class="controls">
      <%= f.password_field :password %>
      <%= f.errors_for :password %>
    </div>
  </div>

  <div class="control-group<%= " error" if f.has_errors?(:password_confirmation) %>">
    <%= f.label :password_confirmation, 'Confirm', class: 'control-label' %>
    <div class="controls">
      <%= f.password_field :password_confirmation %>
      <%= f.errors_for :password_confirmation %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Sign up", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "links" %>
